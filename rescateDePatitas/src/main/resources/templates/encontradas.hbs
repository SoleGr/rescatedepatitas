{{#partial "content"}}
    <div class="blog top">
        <div class="container">
            <div class="section-header text-center wow zoomIn" data-wow-delay="0.1s">
                <p>Buscamos a sus due√±os</p>
                <h2>Mascotas perdidas</h2>
            </div>
            <div class="row blog-page">
                {{#each encontradas}}
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.0s">
                    <div class="blog-item">
                        <div class="blog-img">
                            <img src="{{datosMascotaEncontrada.fotos.[0].uRLfoto}}" alt="Foto mascota">
                        </div>
                        <div class="blog-text">
                            <h6>Publicacion nro.: {{id}}</h6>
                            <div class="blog-meta">
                                <p><i class="far fa-calendar"></i>{{fecha}}
                                </p>
                            </div>
                            <a class="btn-mis" href="/encontradas/{{id}}">Ver perfil <i
                                    class="fa fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
{{/partial}}

{{#eq rol null}}

    {{> layout.hbs}}

{{/eq}}
{{#eq rol "Duenio"}}

    {{> layout_duenio.hbs}}

{{/eq}}
{{#eq rol "Voluntario"}}

    {{> layout_voluntario.hbs}}

{{/eq}}
{{#eq rol "Rescatista"}}

    {{> layout_rescatista.hbs}}

{{/eq}}